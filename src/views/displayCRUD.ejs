<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
  </head>
  <style>
    table,
    th,
    td {
      border: 1px solid black;
      border-collapse: collapse;
    }

    .btn_edit {
      text-decoration: none;
      outline: none;
      border: none;
      background-color: #0b7285;
      font-size: 16px;
      font-family: inherit;
      color: #99e9f2;
      height: 25px;
      margin: 5px 10px;
      width: 40px;
      cursor: pointer;
      border-radius: 5px;
    }

    .btn_delete {
      outline: none;
      border: none;
      background-color: #0c8599;
      font-size: 16px;
      text-decoration: none;
      font-family: inherit;
      color: #c5f6fa;
      height: 25px;
      margin: 5px 0px;
      width: 40px;
      cursor: pointer;
      border-radius: 5px;
    }
  </style>
  <body>
    <table style="width: 100%">
      <tr>
        <th colspan="">Email</th>
        <!-- <th colspan="">Password</th> -->
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>gender</th>
        <th>Action</th>
      </tr>
      <% for(let i = 0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <!-- <td><%= dataTable[i].password %></td> -->
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td><%= dataTable[i].phoneNumber %></td>
        <td><%= dataTable[i].gender %></td>
        <td>
          <a
            href="/edit-crud?id=<%= dataTable[i].id %>"
            class="btn btn_edit"
            type="button"
            >Edit</a
          >
          <a
            href="/delete-crud?id=<%= dataTable[i].id %>"
            class="btn btn_delete"
            type="button"
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
